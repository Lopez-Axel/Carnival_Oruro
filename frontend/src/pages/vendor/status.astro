    max-width: 800px;
    margin: 0 auto;
  }

  .status-card {
    background: var(--dark-card);
    border: 1px solid var(--dark-border);
    border-radius: 20px;
    padding: 40px;
    backdrop-filter: blur(10px);
  }

  /* Loading */
