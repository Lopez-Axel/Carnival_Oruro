    margin-bottom: 40px;
  }

  .app-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 24px;
    flex-wrap: wrap;
    gap: 16px;
  }

  .app-header h2 {
    color: var(--text-light);
    margin: 0;
  }

  .status-badge {
