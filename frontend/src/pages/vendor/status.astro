    color: var(--text-light);
    margin: 0 0 8px 0;
  }

  .timeline-content p {
    color: var(--text-muted);
    margin: 0;
  }

  /* Documents */
  .documents-section {
    margin-bottom: 40px;
  }

  .documents-section h3 {
    color: var(--text-light);
    margin-bottom: 24px;
  }

  .documents-list {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

