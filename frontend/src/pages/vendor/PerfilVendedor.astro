---
import MainLayout from '../../layouts/MainLayout.astro';
---

<MainLayout>
  <div class="min-h-[calc(100vh-4rem)] bg-gradient-to-br from-indigo-900 via-purple-900 to-red-900 pt-20 px-4 md:px-8">
    <div class="max-w-3xl mx-auto">
      <!-- Header -->
      <div class="bg-red-700 rounded-t-2xl shadow-lg">
        <div class="p-4 flex justify-between items-center">
          <h1 class="text-2xl font-bold text-white">CONFIGURACIÓN DE PERFIL</h1>
          <div class="flex gap-2">
            <button class="px-4 py-2 bg-red-800 hover:bg-red-600 text-white rounded-lg transition flex items-center gap-2">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
              </svg>
              Vista previa
            </button>
          </div>
        </div>
      </div>

      <!-- Formulario de Configuración -->
      <div class="backdrop-blur-lg bg-white/10 rounded-b-2xl border border-white/20 p-6">
        <form id="profileForm" class="space-y-6">
          <!-- Información Básica -->
          <div class="space-y-4">
            <div class="flex items-center gap-2 text-white">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
              </svg>
              <label class="font-medium">NEGOCIO:</label>
            </div>
            <input 
              type="text" 
              value="Fiesta Group"
              class="w-full bg-blue-900/40 border border-blue-300/30 rounded-lg px-4 py-2 text-white placeholder-blue-200/50 focus:outline-none focus:ring-2 focus:ring-purple-500/50"
            />

            <div class="flex items-center gap-2 text-white mt-4">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
              </svg>
              <label class="font-medium">DESCRIPCIÓN:</label>
            </div>
            <textarea 
              class="w-full bg-blue-900/40 border border-blue-300/30 rounded-lg px-4 py-2 text-white placeholder-blue-200/50 focus:outline-none focus:ring-2 focus:ring-purple-500/50 h-24 resize-none"
            >"Experiencia VIP en el carnaval"</textarea>
          </div>

          <!-- Branding -->
          <div class="space-y-4">
            <div class="flex items-center gap-2 text-white">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01" />
              </svg>
              <label class="font-medium">BRANDING (Subir logo y colores)</label>
            </div>
            <div class="bg-blue-900/40 border border-blue-300/30 rounded-lg p-4">
              <div class="flex items-center gap-4">
                <div class="w-24 h-24 bg-blue-800/50 rounded-lg flex items-center justify-center border-2 border-dashed border-blue-300/30 cursor-pointer hover:bg-blue-800/70 transition">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-blue-300/70" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
                  </svg>
                </div>
                <div class="flex-1">
                  <p class="text-white mb-2">Paleta actual: Azul/Amarillo/Rojo</p>
                  <div class="flex gap-2">
                    <div class="w-8 h-8 rounded bg-blue-500 cursor-pointer hover:ring-2 ring-white transition"></div>
                    <div class="w-8 h-8 rounded bg-yellow-500 cursor-pointer hover:ring-2 ring-white transition"></div>
                    <div class="w-8 h-8 rounded bg-red-500 cursor-pointer hover:ring-2 ring-white transition"></div>
                    <button class="px-3 py-1 bg-purple-600/50 hover:bg-purple-600/70 text-white rounded text-sm transition">
                      Cambiar colores
                    </button>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Políticas -->
          <div class="space-y-4">
            <div class="flex items-center gap-2 text-white">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
              </svg>
              <label class="font-medium">POLÍTICAS:</label>
            </div>
            <div class="space-y-3">
              <label class="flex items-center gap-3 text-white cursor-pointer hover:bg-blue-900/20 p-2 rounded transition">
                <input type="checkbox" checked class="form-checkbox h-5 w-5 text-purple-600 rounded focus:ring-purple-500 focus:ring-2">
                <span>Acepto reembolsos (hasta 48h antes)</span>
              </label>
              <label class="flex items-center gap-3 text-white cursor-pointer hover:bg-blue-900/20 p-2 rounded transition">
                <input type="checkbox" checked class="form-checkbox h-5 w-5 text-purple-600 rounded focus:ring-purple-500 focus:ring-2">
                <span>Ofrecer servicio de mesa (+$50 por asiento)</span>
              </label>
              <label class="flex items-center gap-3 text-white cursor-pointer hover:bg-blue-900/20 p-2 rounded transition">
                <input type="checkbox" class="form-checkbox h-5 w-5 text-purple-600 rounded focus:ring-purple-500 focus:ring-2">
                <span>Permitir reservas anticipadas (hasta 6 meses)</span>
              </label>
              <label class="flex items-center gap-3 text-white cursor-pointer hover:bg-blue-900/20 p-2 rounded transition">
                <input type="checkbox" class="form-checkbox h-5 w-5 text-purple-600 rounded focus:ring-purple-500 focus:ring-2">
                <span>Ofrecer paquetes especiales para grupos</span>
              </label>
            </div>
          </div>

          <!-- Información Adicional -->
          <div class="space-y-4">
            <div class="flex items-center gap-2 text-white">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <label class="font-medium">INFORMACIÓN ADICIONAL:</label>
            </div>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <div>
                <label class="block text-white text-sm mb-2">Horario de atención</label>
                <input 
                  type="text" 
                  placeholder="Ej: 9:00 AM - 6:00 PM"
                  class="w-full bg-blue-900/40 border border-blue-300/30 rounded-lg px-4 py-2 text-white placeholder-blue-200/50 focus:outline-none focus:ring-2 focus:ring-purple-500/50"
                />
              </div>
              <div>
                <label class="block text-white text-sm mb-2">Teléfono de contacto</label>
                <input 
                  type="tel" 
                  placeholder="Ej: +591 xxxxxxxx"
                  class="w-full bg-blue-900/40 border border-blue-300/30 rounded-lg px-4 py-2 text-white placeholder-blue-200/50 focus:outline-none focus:ring-2 focus:ring-purple-500/50"
                />
              </div>
            </div>
          </div>

          <!-- Botones de Acción -->
          <div class="flex justify-center pt-4">
            <button type="submit" class="px-6 py-2 bg-green-600 hover:bg-green-700 text-white rounded-lg transition flex items-center gap-2">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              GUARDAR CAMBIOS
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</MainLayout>

<style>
  /* Animations */
  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(-20px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .backdrop-blur-lg {
    animation: fadeIn 0.6s ease-out forwards;
  }

  /* Custom focus styles */
  input:focus, textarea:focus, button:focus {
    outline: none;
    box-shadow: 0 0 0 2px rgba(139, 92, 246, 0.3);
  }
</style>

<script>
  // Estilizar checkboxes después de que el DOM esté cargado
  document.addEventListener('DOMContentLoaded', () => {
    const checkboxes = document.querySelectorAll('input[type="checkbox"]');
    checkboxes.forEach(checkbox => {
      checkbox.classList.add(
        'rounded',
        'border-blue-300/30',
        'bg-blue-900/40',
        'text-purple-600',
        'focus:ring-2',
        'focus:ring-purple-500',
        'focus:ring-offset-0',
        'transition-colors',
        'duration-200'
      );
    });
  });

  // Manejar el formulario
  const form = document.getElementById('profileForm');
  form?.addEventListener('submit', (e) => {
    e.preventDefault();
    // Aquí iría la lógica para guardar los cambios
    console.log('Guardando cambios...');
  });

  // Preview del logo
  const logoUploader = document.querySelector('.border-dashed');
  logoUploader?.addEventListener('click', () => {
    // Aquí iría la lógica para subir el logo
    console.log('Subiendo logo...');
  });

  // Color picker
  const colorPicker = document.querySelector('button:contains("Cambiar colores")');
  colorPicker?.addEventListener('click', () => {
    // Aquí iría la lógica para el selector de colores
    console.log('Abriendo selector de colores...');
  });

  // Vista previa
  const previewButton = document.querySelector('button:contains("Vista previa")');
  previewButton?.addEventListener('click', () => {
    // Aquí iría la lógica para mostrar la vista previa
    console.log('Mostrando vista previa...');
  });

  // Animación al guardar
  const saveButton = document.querySelector('button[type="submit"]');
  saveButton?.addEventListener('click', () => {
    saveButton.classList.add('animate-pulse');
    setTimeout(() => {
      saveButton.classList.remove('animate-pulse');
    }, 1000);
  });
</script> 