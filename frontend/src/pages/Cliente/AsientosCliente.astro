---
import MainLayout from '../../layouts/MainLayout.astro';
---

<MainLayout>
  <div class="min-h-screen bg-gradient-to-b from-indigo-900 via-indigo-900/95 to-purple-900/90 pt-24">
    <!-- Información del vendedor -->
    <div class="bg-red-700 text-white py-3 px-6">
      <div class="max-w-7xl mx-auto flex justify-between items-center">
        <h1 class="text-2xl font-bold">FIESTA GROUP - ZONA NORTE</h1>
        <div class="flex items-center gap-4">
          <button class="text-white hover:text-yellow-400">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
            </svg>
          </button>
        </div>
      </div>
    </div>

    <!-- Barra de información -->
    <div class="bg-blue-900 text-white py-3">
      <div class="max-w-7xl mx-auto px-6 flex justify-between items-center">
        <div class="flex items-center gap-8">
          <div class="flex items-center">
            <div class="flex">
              {Array(5).fill('').map((_, i) => (
                <svg class={`w-5 h-5 ${i < 4 ? 'text-yellow-400' : 'text-gray-400'}`} fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                </svg>
              ))}
              <span class="ml-2">(128)</span>
            </div>
          </div>
          <div class="flex items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
            </svg>
            <span>+51 999888777</span>
          </div>
          <div class="flex items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
            </svg>
            <span>Calle 123, Plaza Principal</span>
          </div>
        </div>
        <div class="flex items-center gap-3">
          <div class="flex items-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"/>
            </svg>
            <span class="text-2xl font-bold ml-2">$200</span>
          </div>
          <a href="/Cliente/CompraCliente" class="bg-blue-600 text-white px-4 py-1 rounded hover:bg-blue-700 transition-colors flex items-center justify-center">
            Comprar
          </a>
        </div>
      </div>
    </div>

    <!-- Mapa de Asientos -->
    <div class="max-w-7xl mx-auto px-6 py-8">
      <div class="bg-blue-800/40 rounded-lg p-6">
        <h2 class="text-white text-xl font-bold mb-6">MAPA DE ASIENTOS (INTERACTIVO)</h2>
        
        <div class="flex flex-col gap-6">
          <!-- Fila C -->
          <div class="flex gap-2 justify-center">
            {['C1', 'C2', 'C3', 'C4', 'C5', 'C6', 'C7', 'C8', 'C9'].map((seat) => (
              <button 
                class={`w-12 h-12 rounded ${
                  ['C4', 'C5', 'C7', 'C8'].includes(seat) 
                    ? 'bg-red-300 cursor-not-allowed' 
                    : 'bg-green-300 hover:bg-green-400'
                } flex items-center justify-center font-bold`}
              >
                {seat}
              </button>
            ))}
          </div>

          <!-- Fila B -->
          <div class="flex gap-2 justify-center">
            {['B1', 'B2', 'B3', 'B4', 'B5', 'B6', 'B7', 'B8'].map((seat) => (
              <button 
                class={`w-12 h-12 rounded ${
                  ['B2', 'B3', 'B4', 'B5', 'B6', 'B7', 'B8'].includes(seat) 
                    ? 'bg-red-300 cursor-not-allowed' 
                    : 'bg-green-300 hover:bg-green-400'
                } flex items-center justify-center font-bold`}
              >
                {seat}
              </button>
            ))}
          </div>

          <!-- Fila A -->
          <div class="flex gap-2 justify-center">
            {['A1', 'A2', 'A3', 'A4', 'A5', 'A6', 'A7'].map((seat) => (
              <button 
                class="w-12 h-12 rounded bg-green-300 hover:bg-green-400 flex items-center justify-center font-bold"
              >
                {seat}
              </button>
            ))}
          </div>
        </div>

        <div class="flex justify-between mt-8">
          <div class="flex gap-8">
            <div class="flex items-center gap-2">
              <div class="w-4 h-4 bg-green-300 rounded"></div>
              <span class="text-white">Disponible</span>
            </div>
            <div class="flex items-center gap-2">
              <div class="w-4 h-4 bg-red-300 rounded"></div>
              <span class="text-white">Vendido</span>
            </div>
          </div>
          <a href="/Cliente/UbicacionCliente" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition-colors flex items-center justify-center">
            Ver Ubicación
          </a>
        </div>
      </div>

      <!-- Servicios Extra -->
      <div class="bg-blue-900/60 rounded-lg mt-6 p-6">
        <div class="flex items-center justify-between">
          <div class="flex items-center gap-6">
            <h3 class="text-white font-bold">Servicios Extra:</h3>
            <label class="flex items-center gap-2 text-white">
              <input type="checkbox" class="form-checkbox h-5 w-5 text-blue-600">
              <span>Baños</span>
            </label>
            <label class="flex items-center gap-2 text-white">
              <input type="checkbox" class="form-checkbox h-5 w-5 text-blue-600">
              <span>Almuerzo</span>
            </label>
          </div>
          <div class="flex items-center gap-4">
            <div class="text-white">
              <span class="font-bold">ASIENTO SELECCIONADO: </span>
              <span>B12 ($150) - VIP</span>
            </div>
            <button class="bg-blue-600 text-white px-6 py-2 rounded hover:bg-blue-700 transition-colors flex items-center gap-2">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"/>
              </svg>
              Añadir al carrito
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</MainLayout>

<style>
  /* Asegurarse de que el contenido no quede detrás de la barra inferior */
  body {
    padding-bottom: 3rem;
  }
</style>